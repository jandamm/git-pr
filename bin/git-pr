#!/usr/bin/env zsh

function error() {
	$quiet || printf "%s\n" $2 >&2
	exit $1
}

# TODO: Print usage/help
if [[ -z $1 ]]
then
	git-pr_help git-pr
	exit
fi

cmd=git-pr-$1

if ! hash $cmd &>/dev/null
then error 255 "Unknown subcommand of git pr: $1"
fi

shift
if [[ $1 = '--help' ]]
then
	git-pr_help $cmd
else
	$cmd $@
fi
